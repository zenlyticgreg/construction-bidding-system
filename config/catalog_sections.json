{
  "metadata": {
    "name": "Whitecap Catalog Sections Configuration",
    "version": "1.0.0",
    "description": "Whitecap catalog structure for PACE construction bidding automation platform",
    "author": "PACE Development Team",
    "created": "2024-01-15",
    "updated": "2024-01-15"
  },
  "catalog_sections": {
    "concrete_forming": {
      "start_page": 1,
      "end_page": 50,
      "priority": "high",
      "description": "Concrete forming and shoring systems",
      "categories": ["formwork", "shoring", "concrete"],
      "keywords": ["form", "shoring", "concrete", "forming"]
    },
    "fastening_systems": {
      "start_page": 51,
      "end_page": 100,
      "priority": "medium",
      "description": "Fastening and anchoring systems",
      "categories": ["fasteners", "anchors", "hardware"],
      "keywords": ["fastener", "anchor", "bolt", "screw", "hardware"]
    },
    "safety_equipment": {
      "start_page": 101,
      "end_page": 150,
      "priority": "high",
      "description": "Safety equipment and fall protection",
      "categories": ["safety", "fall_protection", "ppe"],
      "keywords": ["safety", "fall", "protection", "harness", "guardrail"]
    },
    "tools_and_equipment": {
      "start_page": 151,
      "end_page": 200,
      "priority": "medium",
      "description": "Hand tools and construction equipment",
      "categories": ["tools", "equipment", "hand_tools"],
      "keywords": ["tool", "equipment", "hand", "power", "construction"]
    },
    "materials_and_supplies": {
      "start_page": 201,
      "end_page": 250,
      "priority": "medium",
      "description": "Construction materials and supplies",
      "categories": ["materials", "supplies", "consumables"],
      "keywords": ["material", "supply", "consumable", "construction"]
    }
  },
  "extraction_settings": {
    "table_detection": {
      "enabled": true,
      "min_rows": 3,
      "min_cols": 2,
      "confidence_threshold": 0.7
    },
    "text_extraction": {
      "enabled": true,
      "ocr_enabled": false,
      "min_confidence": 0.8
    },
    "product_identification": {
      "enabled": true,
      "required_fields": ["description", "part_number", "price"],
      "optional_fields": ["category", "specifications", "notes"]
    },
    "data_cleaning": {
      "enabled": true,
      "remove_duplicates": true,
      "standardize_units": true,
      "validate_prices": true
    }
  },
  "agency_support": {
    "caltrans": {
      "enabled": true,
      "priority": "high",
      "specific_requirements": ["caltrans_approved", "california_specs"]
    },
    "dot_agencies": {
      "enabled": true,
      "priority": "high",
      "specific_requirements": ["dot_approved", "state_specs"]
    },
    "municipal": {
      "enabled": true,
      "priority": "medium",
      "specific_requirements": ["municipal_approved", "local_specs"]
    },
    "federal": {
      "enabled": true,
      "priority": "medium",
      "specific_requirements": ["federal_approved", "federal_specs"]
    },
    "commercial": {
      "enabled": true,
      "priority": "medium",
      "specific_requirements": ["commercial_grade", "industry_standards"]
    }
  }
} 