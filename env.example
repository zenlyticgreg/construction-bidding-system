# PACE - Project Analysis & Construction Estimating
# Environment Configuration

# Application Settings
PACE_ENVIRONMENT=development
PACE_DEBUG=false
PACE_APP_NAME=PACE - Project Analysis & Construction Estimating
PACE_VERSION=1.0.0

# Database Configuration
PACE_DB_URL=sqlite:///data/pace.db
PACE_DB_ECHO=false
PACE_DB_POOL_SIZE=10
PACE_DB_MAX_OVERFLOW=20

# Logging Configuration
PACE_LOG_LEVEL=INFO
PACE_LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
PACE_LOG_FILE=logs/pace.log
PACE_LOG_MAX_SIZE=10485760
PACE_LOG_BACKUP_COUNT=5

# API Configuration
PACE_API_HOST=0.0.0.0
PACE_API_PORT=8000
PACE_API_DEBUG=false
PACE_API_CORS_ORIGINS=["*"]

# UI Configuration
PACE_UI_THEME=light
PACE_UI_PAGE_TITLE=PACE - Construction Estimating
PACE_UI_PAGE_ICON=ðŸ“Š
PACE_UI_LAYOUT=wide

# Agency Configuration
PACE_DEFAULT_AGENCY=caltrans
PACE_SUPPORTED_AGENCIES=["caltrans", "dot", "municipal", "federal", "commercial"]

# File Handling Configuration
PACE_FILE_UPLOAD_DIR=data/uploads
PACE_FILE_TEMP_DIR=data/temp
PACE_FILE_OUTPUT_DIR=output
PACE_FILE_MAX_SIZE=104857600
PACE_FILE_ALLOWED_EXTENSIONS=[".pdf", ".xlsx", ".xls", ".csv"]

# Base Directories
PACE_BASE_DIR=.
PACE_DATA_DIR=data
PACE_LOGS_DIR=logs 